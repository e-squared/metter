<%= headline_tag false %>

<%= form_for current_user, :url => profile_path, :html => { :class => "form-horizontal well" } do |form| %>
  <%= form.validation_errors %>

  <%= form.input :first_name %>
  <%= form.input :last_name %>
  <%= form.input :login, :disabled => true %>
  <%= form.input :password %>
  <%= form.input :password_confirmation %>
  <%= form.input :locale, :as => :select, :args => [options_for_locales] %>

  <%= form.buttons t(".update_profile"), root_path %>
<% end %>

